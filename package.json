{
    "name": "jsonik",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "node esbuild",
        "dev": "node esbuild --dev",
        "start": "cd app && node app.mjs",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "lint": "eslint './src/**/*.{js,ts}'",
        "compose": "npm run build && docker compose up -d --no-deps --build"
    },
    "eslintConfig": {
        "extends": [
            "plugin:@typescript-eslint/recommended"
        ],
        "plugins": [
            "@typescript-eslint"
        ],
        "parser": "@typescript-eslint/parser",
        "root": true,
        "env": {
            "node": true
        },
        "rules": {
            "semi": 0,
            "no-underscore-dangle": 0,
            "import/prefer-default-export": 0,
            "@typescript-eslint/no-explicit-any": "off",
            "prefer-rest-params": "off"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Valexr/jsonik.git"
    },
    "devDependencies": {
        "@slidy/media": "^1.2.8",
        "@tsconfig/svelte": "^4.0.1",
        "@types/cookie": "^0.5.1",
        "@types/eslint": "^8.37.0",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/marked": "^4.0.8",
        "@types/node": "^18.15.13",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "codejar": "^3.7.0",
        "cookie": "^0.5.0",
        "esbuild": "^0.17.17",
        "esbuild-svelte": "^0.7.3",
        "eslint": "^8.38.0",
        "jsonwebtoken": "^9.0.0",
        "lowdb": "^6.0.0",
        "marked": "^4.3.0",
        "svelte": "^3.58.0",
        "svelte-check": "^3.2.0",
        "svelte-pathfinder": "^4.7.0",
        "svelte-preprocess": "^5.0.3",
        "tslib": "^2.5.0",
        "typescript": "^5.0.4"
    }
}