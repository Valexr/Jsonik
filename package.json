{
    "name": "jsonik",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "node esbuild",
        "dev": "node esbuild --dev",
        "start": "cd app && node app.js",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "lint": "eslint './src/**/*.{js,ts}'"
    },
    "eslintConfig": {
        "extends": [
            "plugin:@typescript-eslint/recommended"
        ],
        "plugins": [
            "@typescript-eslint"
        ],
        "parser": "@typescript-eslint/parser",
        "root": true,
        "env": {
            "node": true
        },
        "rules": {
            "semi": 0,
            "no-underscore-dangle": 0,
            "import/prefer-default-export": 0,
            "@typescript-eslint/no-explicit-any": "off"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Valexr/jsonik.git"
    },
    "devDependencies": {
        "@slidy/media": "^1.2.8",
        "@tsconfig/svelte": "^3.0.0",
        "@types/cookie": "^0.5.1",
        "@types/eslint": "^8.21.2",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/node": "^18.15.3",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "codejar": "^3.7.0",
        "cookie": "^0.5.0",
        "esbuild": "^0.17.11",
        "esbuild-svelte": "^0.7.3",
        "eslint": "^8.36.0",
        "jsonwebtoken": "^9.0.0",
        "lowdb": "^5.1.0",
        "svelte": "^3.56.0",
        "svelte-check": "^3.1.4",
        "svelte-pathfinder": "^4.5.0",
        "svelte-preprocess": "^5.0.1",
        "tslib": "^2.5.0",
        "typescript": "^4.9.5"
    }
}