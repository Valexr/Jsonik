{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "$server/*": [
                "src/server/*"
            ],
            "$client/*": [
                "src/client/*"
            ],
            "$types/*": [
                "src/types/*"
            ]
        },
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        // "preserveValueImports": true,
        "moduleResolution": "NodeNext",
        // "importsNotUsedAsValues": "error",
        "verbatimModuleSyntax": false,
        "lib": [
            "DOM",
            "ESNext",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "target": "ESNext",
        "types": [
            "svelte",
            "Node"
        ]
    },
    "include": [
        "src/**/*"
    ],
}