{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "$server/*": ["src/server/*"],
            "$client/*": ["src/client/*"],
            "$types/*": ["src/types/*"]
        },
        "allowJs": true,
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "verbatimModuleSyntax": true,
        "lib": ["DOM", "ESNext", "DOM.Iterable"],
        "module": "ESNext",
        "target": "ESNext",
        "types": ["svelte", "Node"]
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "parser": "@typescript-eslint/parser",
        "project": "./tsconfig.json",
        "include": ["src/**/*"],
        "exclude": ["node_modules/**/*"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*"]
}
